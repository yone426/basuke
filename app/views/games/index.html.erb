 <div class="games"> 
  <%= link_to '試合結果登録', new_game_path %>
  <% @games.each do |game| %>
    <div class="message">
      <p>日付</p>
      <%= game.date %><br>
      <p>相手チーム</p>
      <%= game.opponent %><br>
      <p>場所</p>
      <%= game.place %><br>
      <p>結果</p>
      <%= game.result %><br>
      <p>得点</p>
      <%= game.goal %><p>-</p><%= game.allow %>
      <p>失点</p>
      <%= link_to '試合結果編集', edit_game_path(game.id) %>
      <%= link_to '試合結果削除', "/games/#{game.id}", method: :delete %>
    </div>
  <% end %>
  
  
</div>
